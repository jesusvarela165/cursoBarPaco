<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8" />
        <title>{% block titulo %}Welcome!{% endblock %}</title>
        <!-- Bootstrap core CSS -->
        <link href="{{asset('vendor/bootstrap/css/bootstrap.min.css')}}" rel="stylesheet">
        <!-- Custom styles for this template -->
        <link href="{{asset('css/modern-business.css')}}" rel="stylesheet">
        <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.2.0/css/all.css" integrity="sha384-hWVjflwFxL6sNzntih27bfxkr27PmbbK/iSvJ+a4+0owXq79v+lsFkW54bOGbiDQ" crossorigin="anonymous">
        {% block stylesheets %}{% endblock %}
        <link rel="icon" type="image/x-icon" href="{{ asset('favicon.ico') }}" />
    </head>
    <body>
      <!-- Menu de navegacion -->
      <nav class="navbar fixed-top navbar-expand-lg navbar-dark bg-dark fixed-top">
        <div class="container">
          <a class="navbar-brand" href="{{path('homepage')}}">Bar Paco</a>
          <button class="navbar-toggler navbar-toggler-right" type="button" data-toggle="collapse" data-target="#navbarResponsive" aria-controls="navbarResponsive" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
          </button>
          <div class="collapse navbar-collapse" id="navbarResponsive">
            <ul class="navbar-nav ml-auto">
              <li class="nav-item">
                <a class="nav-link" href="{{path('nosotros')}}" id="nosotrosLink">Nosotros</a>
              </li>
              <li class="nav-item dropdown">
                <a class="nav-link dropdown-toggle" href="#" id="navbarDropdownBlog" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                  Bares
                </a>
                <div class="dropdown-menu dropdown-menu-right" aria-labelledby="navbarDropdownBlog">
                  <a class="dropdown-item" href="{{path('contactar',{'sitio':'vlc'})}}">Valencia</a>
                  <a class="dropdown-item" href="{{path('contactar',{'sitio':'bcn'})}}">Barcelona</a>
                  <a class="dropdown-item" href="{{path('contactar',{'sitio':'mdr'})}}">Madrid</a>
                </div>
              </li>
              <li class="nav-item">
                <a class="nav-link" href="#">Tapas</a>
              </li>
              {% if app.user %}
              <li class="nav-item dropdown">
                <a class="nav-link dropdown-toggle" href="#" id="navbarDropdownBlog" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                  Reservas
                </a>
                <div class="dropdown-menu dropdown-menu-right" aria-labelledby="navbarDropdownBlog">
                  <a class="dropdown-item" href="{{path('nuevaReserva')}}">Nueva</a>
                  <a class="dropdown-item" href="{{path('reservas')}}">Lista</a>
                </div>
              </li>
              <li class="nav-item">
                <a class="nav-link" href="{{path('logout')}}">Salir</a>
              </li>
              {% else %}
              <li class="nav-item">
                <a class="nav-link" href="{{path('login')}}">Reservas</a>
              </li>
              {% endif %}
              </li>
            </ul>
          </div>
        </div>
      </nav>
      <!-- Fin Menu de navegacion -->

        {% block contenido %}{% endblock %}

      <!-- Footer -->
      <footer class="py-5 bg-dark">
          <div class="container">
            <p class="m-0 text-center text-white">Copyright &copy; Cooking Software 2018</p>
          </div>
          <!-- /.container -->
      </footer>
      <!-- Bootstrap core JavaScript -->
      <script src="{{asset('vendor/jquery/jquery.min.js') }}"></script>
      <script src="{{asset('vendor/bootstrap/js/bootstrap.bundle.min.js') }}"></script>
      {% block javascripts %}{% endblock %}
    </body>
</html>
